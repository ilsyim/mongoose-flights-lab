<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section> 
    <div>Flight: </div>
    <div>
    <%= flight.flightNo%>
      <a href="/flights/<%= flight._id %>/edit">Edit</a>
    </div>
    <div>Airline:</div>
    <div><%= flight.airline %></div>

    <div>Airport:</div>
    <div><%= flight.airport %></div>

    <div>Flight Number:</div>
    <div><%= flight.flightNo %></div>

    <div>Departs</div>
    <div><%= flight.departs %></div>

  </section>
    <h2>Tickets</h2>
    <form id="add-ticket-form" action="/flights/<%= flight._id %>/tickets" method="POST">
      <label for="seat-textarea">Seat Number</label>
      <input name="seat" required pattern="[A-F][1-9]\d?" autocomplete="off">
      <label for="price">Price</label>
      <input name="price" autocomplete="off">
      <button>Add Ticket</button>
    </form>

<% if (flight.tickets.length) { %> 
  <table>
    <thead>
      <tr>
        <th>Delete</th>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(ticket => { %> 
        <tr>
          <td>
            <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" class="delete-form" method="POST">
              <button>X</button>
            </form>
          </td>
          <td><%= ticket.seat %></td>
          <td><%= ticket.price %></td>
          <td><%= ticket.createdAt.toLocaleDateString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %> 
  <h3>No Tickets Yet</h3>
<% } %> 

<div>Your Meals:</div>
  <ul>
    <% flight.meals.forEach(mealName => { %>
      <li><%= mealName.name %></li>
    <% }) %> 
  </ul>
<form id="add-meal-to-flight" action="/flights/<%= flight._id %>/meals" method="POST">
  <label for="name-input">Food:</label>
  <input type="text" name="name" id="name-input" autocomplete="off">
  <button>Add Meal</button>
  <select name="mealId" id="">
    <% meals.forEach(meal => { %>
      <option value="<%= meal._id %>"><%= meal.name %></option>
    <% }) %>
</form>
</select>
</main>

<%- include('../partials/footer') %> 