<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/new.css" />
<%- include('../partials/nav') %>

<h1>Edit Your Flight</h1>

<form action="/flights/<%= flight._id %>?_method=PUT" method="POST" autocomplete="off">
  <label for="airline-select">Airline:</label>
  <select name="airline" id="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select>

  <label for="airport-select">Airport:</label>
  <select name="airport" id="airport">
    <option value="AUS">AUS</option>
    <option value="DEN" selected>DEN</option>
    <option value="DFW">DFW</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>

  <label for="flight-number-input">Flight Number:</label>
  <input type="text" name="flightNo" id="flight-number-input" required>
  
  <label for="departs-input">Departs</label>
  <input type="datetime-local" name="departs" id="departs-input" value="<%= departsDate %> ">

  <button type="submit">Save Flight</button>
</form>

