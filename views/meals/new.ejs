<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meal.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>What would you like to eat?
    <select>
      <% meals.forEach(meal => { %>
        <option><%= meal.name %></option>
      <% }) %> 
    </select>
  </p>
<form id="add-meal-form" action="/meals" method="POST">
  <label for="name-input">Food:</label>
  <input type="text" name="name" id="name-input">
  <button>Add Meal</button>
</form>

</main>
